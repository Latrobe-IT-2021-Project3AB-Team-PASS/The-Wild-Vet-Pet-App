<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".ParasitePreventionDetail">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/the_wild_vet_logo_01" />



            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_parasite"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/PetTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/tittle_outline"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Parasite Prevention"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/search_outline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@drawable/border"
                        app:layout_constraintBottom_toBottomOf="@+id/border_layout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/PetTittle"
                        app:layout_constraintVertical_bias="0.0">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView1"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:layout_column="0"
                                android:layout_weight="0.2"
                                android:background="@drawable/grey_border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Date"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView2"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:layout_column="1"
                                android:layout_weight="0.5"
                                android:background="@drawable/grey_border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Product"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView3"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:layout_weight="0.3"
                                android:background="@drawable/grey_border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Frequency"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView4"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp"
                                android:layout_column="0"
                                android:layout_weight="0.2"
                                android:background="@drawable/grey_border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="2/2/2018"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView5"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp"
                                android:layout_column="1"
                                android:layout_weight="0.5"
                                android:background="@drawable/grey_border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Bravecto Spot-On"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_weight="0.3"
                                android:background="@drawable/grey_border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="6 months"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView7"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_weight="0.2"
                                android:background="@drawable/border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="4/9/2019"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView8"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_weight="0.5"
                                android:background="@drawable/border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Bravecto Chew"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:background="@drawable/border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="3 months"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView10"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp"
                                android:layout_column="0"
                                android:layout_weight="0.2"
                                android:background="@drawable/grey_border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="6/12/2019"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView11"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp"
                                android:layout_column="1"
                                android:layout_weight="0.5"
                                android:background="@drawable/grey_border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Bravecto Spot-On"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_weight="0.3"
                                android:background="@drawable/grey_border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="6 months"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView13"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_weight="0.2"
                                android:background="@drawable/border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="23/11/2020"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView14"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_weight="0.5"
                                android:background="@drawable/border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Advocate"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:background="@drawable/border"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="1 month"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>


            </ScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_add"
                    android:text="@string/add_pet"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="@string/delete"
                    android:drawableLeft="@drawable/ic_delete"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>